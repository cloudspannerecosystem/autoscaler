{
    "name": "poller-core",
    "description": "Polls Spanner metrics with Cloud Monitoring",
    "license": "Apache-2.0",
    "author": "Google Inc.",
    "dependencies": {
        "@google-cloud/functions-framework": "^3.0.0",
        "@google-cloud/monitoring": "^2.3.4",
        "@google-cloud/pubsub": "^3.1.0",
        "@google-cloud/spanner": "^5.13.1",
        "axios": "^0.27.2"
